<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/background_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout style="@style/ActionBarTitleContainer">
        <ImageButton android:src="@drawable/ushahidi_icon" android:onClick="onClickHome" android:contentDescription="@string/menu_home" style="@style/ActionBarTitle" />
        <TextView style="@style/ActionBarTitleText" />
        <ImageView style="@style/ActionBarTitleSeparator" />
        <ImageButton android:id="@id/search_report_btn" android:src="@drawable/report_share" android:onClick="onShareClick" style="@style/ActionBarTitle" />
    </LinearLayout>
    <ImageView style="@style/ActionBarSeparator" />
    <ScrollView android:id="@id/view_report" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_title" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_title" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:background="@drawable/report_lable" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/black_color" android:id="@id/title" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_status" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_verified" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:background="@drawable/report_lable" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/black_color" android:id="@id/status" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/report_status_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_status" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_desc" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:background="@drawable/report_lable" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ScrollView android:id="@id/description" android:paddingLeft="10.0px" android:paddingTop="5.0px" android:paddingRight="10.0px" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:textStyle="bold" android:textColor="@drawable/black_color" android:autoLink="all" android:id="@id/webview" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="false" />
                </ScrollView>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_category" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_category" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:background="@drawable/report_lable" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/black_color" android:id="@id/category" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_date" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_date" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/date_layout" android:background="@drawable/report_lable" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:id="@id/date" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/location_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_title" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_location" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/location_layout" android:background="@drawable/report_lable" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:id="@id/location" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/top_items_layout" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <com.google.android.maps.MapView android:enabled="true" android:id="@id/loc_map" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/location" android:apiKey="@string/google_map_api_key" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/photo_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:textColor="@drawable/title_color" android:id="@id/report_photo" android:paddingLeft="10.0px" android:paddingTop="15.0px" android:paddingRight="10.0px" android:paddingBottom="15.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/report_photo" android:singleLine="false" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:paddingLeft="7.0px" android:paddingRight="9.0px" android:paddingBottom="5.0px" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <Gallery android:id="@id/gallery" android:layout_width="fill_parent" android:layout_height="wrap_content" android:spacing="0.0dip" android:layout_below="@id/description" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageSwitcher android:id="@id/switcher" android:paddingTop="0.0dip" android:paddingBottom="0.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>